<schemalist>
    <enum id="com.github.XtremeTHN.DotFiles.ags.WeatherProvider">
        <value nick="metar" value="1"/>
        <value nick="old_us_weather" value="4"/>
        <value nick="met_no" value="8"/>
        <value nick="new_us_weather" value="32"/>
        <value nick="all" value="61"/>
    </enum>

    <enum id="com.github.XtremeTHN.DotFiles.ags.TemperatureUnit">
        <value nick="centigrade" value="3"/>
        <value nick="fahrenheit" value="4"/>
    </enum>

    <schema id="com.github.XtremeTHN.DotFiles.ags" path="/com/github/Axel/DotFiles/ags/">
        <key name="wallpaper" type="s">
            <default>""</default>
            <summary>Your wallpaper</summary>
            <description>Ur wallpaper</description>
        </key>

        <key name="dark-mode" type="b">
            <default>true</default>
            <summary>Dark color scheme</summary>
            <description>This will affect the compiling of the scss</description>
        </key>

        <key name="provider" enum="com.github.XtremeTHN.DotFiles.ags.WeatherProvider">
            <default>"metar"</default>
            <summary>Weather Provider</summary>
            <description>The weather provider for Lib GWeather</description>
        </key>

        <key name="temp-unit" enum="com.github.XtremeTHN.DotFiles.ags.TemperatureUnit">
            <default>"centigrade"</default>
            <summary>Temperature unit</summary>
            <description>The unit that the temperature will use</description>
        </key>

        <key name="current-city-name" type="s">
            <default>""</default>
            <summary>Your city</summary>
            <description>Your current city, needed for GWeather</description>
        </key>

        <key name="latitude" type="d">
            <default>0</default>
            <summary>Your latitude</summary>
            <description>Needed for GWeather. It should be automatically setted when running ags with my dotfiles</description>
        </key>

        <key name="longitude" type="d">
            <default>0</default>
            <summary>Your longitude</summary>
            <description>Needed for GWeather. It should be automatically setted when running ags with my dotfiles</description>
        </key>
    </schema>
</schemalist>
